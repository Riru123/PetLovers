<div class="home-container">
<div class="container-white-background">
      <div class="profile-container">

        <h2 class="home-title">Profile</h2>
        <div class="profile-image">
          <%= render "shared/user-profile-image" %>
          <%= current_user.username %> 
        </div>
            <h2 class="home-title"> Pets that I lost </h2>
            <div class="main-cards-home-missing">
              <%= render "pets/cards-home-missing" %>
            </div>

            <h2 class="home-title"> Pets that I found </h2>
             <div class="main-cards-home-found">
              <%= render "pets/cards-home-found" %>
            </div>

        <% if user_signed_in? %>
        <a data-turbo-method="delete" class="" href="/users/sign_out">
          <div class="btn-sign-out">
            <%= render "shared/signout-svg" %>
            <p>Sign out</p>
          </div>
        </a>
      <% end %>
      </div>
      </div>
    </div>
</div>