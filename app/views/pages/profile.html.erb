<div class="home-container">
<div class="container-white-background">
      <div class="profile-container">

        <h2 class="home-title">Profile</h2>
        <div class="profile-image">
          <%= render "shared/user-profile-image" %>
          <%= current_user.username %> 
        </div>
            <h2 class="home-title"> My lost Pets </h2>
            <div class="main-cards-home-missing">
            <% @pets_lost.each do |pet| %>
              <% if pet.missing? === true %>
                <a href="<%= pet_path(pet) %>">
                <div class="card-container-home" style="background-image: url('<%= cl_image_path pet.photo.key, height: 300, crop: :fill %>')">
                  <div class="card-container-home-overlay">
                    <p><%= pet.name.capitalize %></p>
                    <small><span><%= pet.city.capitalize %></span> <span>14 km away</span></small>
                  </div>
                </div>
                </a>
              <% end %>
            <% end %>
            </div>

        <% if user_signed_in? %>
        <a data-turbo-method="delete" class="" href="/users/sign_out">
          <div class="btn-sign-out">
            <%= render "shared/signout-svg" %>
            <p>Sign out</p>
          </div>
        </a>
      <% end %>
      </div>
      </div>
    </div>
</div>