<a href="<%= pet_path(pet) %>">
<div class="map-popup">
    <div class="details">
        <div class="marker-image">
            <%= cl_image_tag pet.photo.key, height: 90, width: 120, crop: :fill%>
        </div>

        <% if pet.name.present? %>
        <p><%= pet.name.capitalize %></p>
        <% else %>
        <p><%= pet.colors.capitalize %> <%= pet.species.downcase %></p>
        <% end %>

    </div>
</div>
</a>