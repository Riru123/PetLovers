<% @pets_lost.each do |pet| %>
  <div class="card-containder-home" style="background-image: url('<%= cl_image_path pet.photo.key, height: 300, crop: :fill %>')">
    <div class="card-container-home-overlay">
      <p><%= pet.name.capitalize %></p>
      <small><span><%= pet.city.capitalize %></span> <span>14 km away</span></small>
    </div>
  </div>
<% end %>
