<div class="container-white-background">
  <div class="form-container">
    <%= simple_form_for(thing, html: { data: { controller: "photo-preview" } }) do |f| %>
      <%#= f.input :name, label: "Pet name" %>
      <%#= f.input :photo, as: :file, :label => "Photo" %>
      <%= image_tag "", width: 300, class: "hidden", data: { photo_preview_target: "preview" } %>
      <%= f.input :photo, as: :file, input_html: { class: 'btn primary d-none', data: { photo_preview_target: "input", action: "change->photo-preview#displayPreview" } }, label_html: { class: 'upload-photo' }, label: 'ðŸ“· Upload a photo' %>
      <%= f.input :species, collection: ['Cat', 'Dog'] %>
      <%= f.input :breed %>
      <%= f.input :colors %>
      <%= f.input :details %>

      <h2>Where did you find?
        <button>
          <p>Current location<i class="fa-solid fa-location-dot"></i></p>
        </button>
      </h2>

      <%= f.input :street %>
      <%= f.input :zip_code %>
      <%= f.input :city %>
      <%= f.input :country, as: :string %>

      <%= f.submit class: 'button btn btn-primary' %>
    <% end %>
  </div>
</div>
