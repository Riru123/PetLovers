<%= simple_form_for(thing) do |f| %>
  <%= f.input :name, label: "Pet name" %>
  <%#= f.input :picture_image, as: :file, :label => "Photo" %>
  <%= f.input :species, collection: ['cat', 'dog'] %><%= f.input :breed %>
  <%= f.input :colors %>
  <%= f.input :details %>
  <h2>Where did you find ?</h2>
  <button>Current Location</button>
  <%= f.input :street %>
  <%= f.input :zip_code %><%= f.input :city %>
  <%= f.input :country, as: :string %>
  <%= f.submit class: 'button btn btn-primary'%>
<% end %>  

